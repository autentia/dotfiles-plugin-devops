#!/usr/bin/env bash


# ============================================================================
# FUNCTIONS
# ============================================================================
info_msg () {
    printf "\r  [ \033[00;34mINFO\033[0m ] $1\n"
}

clean_ds_store(){
    find $HOME -type f -name ".DS_Store" -delete
}

# ============================================================================
# MAIN
# ============================================================================
info_msg 'Clean .DS_store file generated by the finder'
clean_ds_store
